<loading hidden="{{ !loading }}">加载中...</loading>
<view style="width:98%;margin:10px 1%">
    <view class="photo item" style="height:120px;text-align:center;padding-left:0px;">
        <view class="photo-box" style="margin:0 auto;padding-top:8px;">
            <image src="{{userInfo.avatarUrl?userInfo.avatarUrl:'../../images/user_defaulthead@2x.png'}}" style="border-radius: 100px" class="personal_logo" id="personal_logo"></image>
        </view>
        <view style='text-align:center;margin-top:-25px;'>个人信息</view>
    </view>
    <view class="h1"></view>
    <view class="name item">
        <image src="../../images/name.png" class="item_ico"></image>
        <text>姓名</text>
        <input class="value-right" type="text" value="{{reg_userinfo.name?reg_userinfo.name:''}}" placeholder="请输入真实姓名" />
    </view>
    <view class="h1"></view>
    <view class="phone item">
        <image src="../../images/suggest.png" class="item_ico"></image>
        <text>邮箱</text>
        <span class="value-right">{{reg_userinfo.email?reg_userinfo.email:''}}</span>
    </view>
    <view class="h1"></view>
    <view class="phone item">
        <image src="../../images/telephone.png" class="item_ico"></image>
        <text>联系方式</text>
        <span class="value-right">{{reg_userinfo.mobile?reg_userinfo.mobile:''}}</span>
    </view>
    <view class="h1"></view>    
    <view class="status item">
        <image src="../../images/status.png" class="item_ico"></image>
        <text>状态</text>
        <span class="value-right">{{reg_userinfo.certificationOk==2?'已认证':'未认证'}}</span>
    </view>
    <view class="h1"></view>
    <view class="block" style="width:100%;height:50px;"></view>
</view>